<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeActivity">

    <Button
        android:id="@+id/assetadd"
        android:layout_width="212dp"
        android:layout_height="56dp"
        android:text="Add Asset"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        />
    <Button
        android:id="@+id/taskadd"
        android:layout_width="212dp"
        android:layout_height="56dp"
        android:text="Add Task"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        />
    <Button
        android:id="@+id/workeradd"
        android:layout_width="212dp"
        android:layout_height="56dp"
        android:text="Add Worker"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        />
    <Button
        android:id="@+id/assetshow"
        android:layout_width="212dp"
        android:layout_height="56dp"
        android:text="show Asset"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        />
    <Button
        android:id="@+id/allocatetask"
        android:layout_width="212dp"
        android:layout_height="56dp"
        android:text="Allocate Task"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        />


</LinearLayout>